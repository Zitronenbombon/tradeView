<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    tools:context=".buyStock1"
    android:background="@android:color/holo_green_dark">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/buybuttonid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="BUY"
        android:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textbuyfragmentid" />

    <TextView
        android:id="@+id/textbuyfragmentid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Einkaufsseite:D"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/zurueckbuttonbuyfragmentid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="doch nicht kaufen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"/>

    <EditText
        android:id="@+id/putinamountofsharesEdittextid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/meddl"
        android:ems="10"
        android:inputType="number"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28"
        android:autofillHints="" />



</androidx.constraintlayout.widget.ConstraintLayout>